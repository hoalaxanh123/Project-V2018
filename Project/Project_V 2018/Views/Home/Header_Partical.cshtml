                                            <a href="@Url.Action("Products_LoadByCast_Partial","Products",new { @MaLoai = @item.MaLoai})" title="Xem các sản phẩm thuộc loại @item.MoTa">
                                                <i class="icon-menu fa /Uploads/shop90/images/icon/i_catelogy_7-20x20_png_pagespeed_ce_kzOx8kw31-.png"></i>
