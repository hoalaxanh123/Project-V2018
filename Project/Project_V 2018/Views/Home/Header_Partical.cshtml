<div class="panel panel-danger" id="MyWaiting"  style="background-color:rgba(0,0,0,0.5);width:100%;height:100%;position:fixed;z-index:100;display:none">
    <div class="Myloader"></div>
</div>
<i id="DauTrang" class="hidden"></i>
<div class="header">
    <section class="top-link clearfix">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @* Hot line *@
                    <div class="hidden-xs">  @Html.Action("HotLine_Header_Partical", "Store")</div>
                    @* Load Header menu *@
                    <ul class="nav navbar-nav navbar-right topmenu  hidden-xs hidden-sm">
                        <li class="order-check"><a href='@Url.Action("KiemTraDonHang","Order",new {})'><i class="fas fa-clipboard-list"></i> Kiểm tra đơn hàng</a></li>
                        <li class="order-cart"><a href='@Url.Action("GioHang","Cart",new {})'><i class="fa fa-shopping-cart"></i> Giỏ hàng</a></li>
                        @{
                            NguoiDung temp_NguoiDung = null;
                            if (Session["sessionUser"]!= null)
                            {
                                temp_NguoiDung = Session["sessionUser"] as NguoiDung;
                            }
                            else
                            {
                                var token = "";
                                if (Request.Cookies["LogSession"] != null)
                                {
                                    token = Request.Cookies["LogSession"].Value;
                                    temp_NguoiDung = MyClass.Instance(token);
                                    //Có cookie mà vẫn éo login được --> cookie fake -->xóa
                                    if (Request.Cookies["LogSession"] != null && temp_NguoiDung == null)
                                    {
                                        HttpCookie myCookie = new HttpCookie("LogSession");
                                        myCookie.Expires = DateTime.Now.AddDays(-1d);
                                        Response.Cookies.Add(myCookie);
                                    }
                                }


                            }

                            if (temp_NguoiDung == null)
                            {
                                <li class="account-login">
                                    <button class="myButton_top" onclick="Login()">
                                        <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                    </button>

                                </li>
                                <li class="account-register">
                                    <a href='@Url.Action("Register","User",new {})' id="Btn_Register"><i class="fa fa-key"></i> Đăng ký </a>
                                    <i id="TenDangNhap" style="display:none"></i>
                                </li>
                            }
                            else
                            {
                                <li style="display:none"></li>
                                <li class="account-login">
                                    <a href="@Url.Action("QuanLyTaiKhoan","User",new {})" title="Quản lý tài khoản"><i class="fas fa-cogs"></i>Xin chào @temp_NguoiDung.TenThat</a>
                                    <i id="TenDangNhap" style="display:none">@temp_NguoiDung.TenDangNhap</i>
                                </li>
                                if (temp_NguoiDung.PhanQuyen == 0)
                                {
                                    <li class="account-login"><a href="~/Admin/Home/"><i class="fas fa-toolbox"></i>Quản trị</a></li>
                                }
                                <li class="account-login">
                                    <a href="@Url.Action("Logout","User",new { current=Request.Url.AbsoluteUri})" title="Đăng xuất"><i class="fas fa-sign-out-alt"></i>Thoát</a>
                                    <i id="TenDangNhap" style="display:none">@temp_NguoiDung.TenDangNhap</i>
                                </li>
                            }
                        }
                    </ul>

                    @* Login form *@
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header" style="padding:35px 50px;">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h1><span class="fas fa-users"></span>&nbsp; Đăng nhập</h1>
                                </div>
                                <div class="modal-body" style="padding:40px 50px;">
                                    <form role="form">
                                        <div class="form-group">
                                            <label class="text-danger " id="KetQuaDangNhap"></label>
                                        </div>
                                        <div class="form-group">
                                            <label for="usrname"><span class="fas fa-user-alt"></span> Username</label>
                                            <input type="text" class="form-control" id="userName" placeholder="Nhập tên đăng nhập" required />
                                            <span id="error_name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="psw"><span class="fas fa-lock"></span> Password</label>
                                            <input type="password" class="form-control" id="passWord" placeholder="Nhập mật khẩu" required />
                                            <span id="error_pass" class="text-danger"></span>
                                        </div>
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" checked id="SaveMe"> Nhớ tài khoản
                                            </label>
                                        </div>
                                        <button type="button" id="btn_DangNhap" class="btn btn-success btn-block" onclick="DangNhap()"><span class="fas fa-sign-in-alt"></span>&nbsp;Đăng nhập</button>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger btn-default pull-left" data-dismiss="modal"> <span class="fas fa-times"></span> Hủy</button>
                                    <p>Bạn chưa có tài khoản ? <a href='@Url.Action("Register","User",new {})' style="color:red;font-size:15px">Đăng ký ngay</a></p>
                                    <p>Quên <a href="#">Mật khẩu?</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script>
                        document.getElementById("myModal").addEventListener("keyup", function (event) {
                            event.preventDefault();
                            if (event.keyCode === 13) {
                                document.getElementById("btn_DangNhap").click();
                            }
                        });
                    </script>
                    <script src="~/Content/JS/Validate_Login_User.js"></script>
                    @* Menu Header Mobile *@
                    <div class="show-mobile hidden-lg hidden-md">
                        <div class="quick-user MenuMobile__">
                            <div class="quickaccess-toggle">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="inner-toggle">
                                <ul class="login links">
                                    @{
                                        if (temp_NguoiDung == null)
                                        {
                                            <li class="account-login"><a style="color:black" href="#" onclick="Login()"><i class="fas fa-sign-in-alt"></i> Đăng nhập </a></li>
                                            <li class="account-register">
                                                <a href='@Url.Action("Register", "User", new { })' id="Btn_Register" style="color:black"><i class="fa fa-key"></i> Đăng ký </a>
                                                <i id="TenDangNhap" style="display:none"></i>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="account-login">
                                                <a href="~/User/QuanLyTaiKhoan" title="Quản lý tài khoản" style="color:black"><i class="fas fa-cogs"></i>Xin chào @temp_NguoiDung.TenThat</a>
                                                <i id="TenDangNhap" style="display:none">@temp_NguoiDung.TenDangNhap</i>
                                            </li>
                                            if (temp_NguoiDung.PhanQuyen == 0)
                                            {
                                                <li class="account-login"><a href="~/Admin/Home/" style="color:black"><i class="fas fa-toolbox"></i>Quản trị</a></li>
                                            }
                                            <li class="account-login">
                                                <a href="@Url.Action("Logout","User",new { current=Request.Url.AbsoluteUri})" title="Đăng xuất" style="color:black"><i class="fas fa-sign-out-alt"></i>Thoát</a>
                                                <i id="TenDangNhap" style="display:none">@temp_NguoiDung.TenDangNhap</i>
                                            </li>

                                        }
                                    }
                                </ul>
                            </div>
                        </div>

                        <div class="quick-access MenuMobile__">
                            <div class="quickaccess-toggle">
                                <i class="fas fa-shopping-basket"></i>
                            </div>
                            <div class="inner-toggle">
                                <ul class="links">
                                    <li><a id="mobile-wishlist-total" href="@Url.Action("KiemTraDonHang","Order",new {})" class="wishlist" style="color:black"><i class="fas fa-clipboard-list"></i> Kiểm tra đơn hàng</a></li>
                                    <li><a href='@Url.Action("GioHang","Cart",new {})' class="shoppingcart" style="color:black"><i class="fa fa-shopping-cart"></i> Giỏ hàng</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="quick-access MenuMobile__" style="">
                            <div class="quickaccess-toggle">
                                <i class="fa fa-list"></i>
                            </div>
                            <div class="inner-toggle">
                                <ul class="links">
                                    <li><a style="color:black" href='~/Home' title="Về trang chủ mật ong Tâm Phát"><i class="fas fa-home"></i>Trang chủ</a></li>
                                    <li><a style="color:black" href='@Url.Action("Introduce","Home",new {})'><i class="fas fa-info-circle"></i>Giới thiệu</a></li>
                                    <li><a style="color:black" href='http://fb.com/matongtamphat'><i class="fas fa-newspaper"></i>Tin tức</a></li>
                                    <li><a style="color:black" href="@Url.Action("Info_Partical","Home",new {})"><i class="fas fa-comments"></i>Liên hệ</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="header-content clearfix">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-xs-12 col-sm-12 header-left text-center">
                    <div class="logo">
                        <a href="/" title="Mật ong Tâm Phát">
