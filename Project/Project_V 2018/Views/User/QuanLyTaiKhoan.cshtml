
@{
    Layout = null;
}
@model Project_V_2018.Models.NguoiDung

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Template/UserLayout.cshtml";
}
@Html.Partial("~/Views/Home/Head.cshtml")
@Html.Action("Header_Partical", "Home")
@Html.Action("SlideShow_Partical", "Home")
<script type="text/javascript">
    $(document).ready(function () {
        $("#Menus").addClass("hidden");
        $("#slideshow").addClass("hidden");
    })
</script>

<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="menu-account ng-scope">
                    <h3>
                        <span>
                            Quản lý cá nhân
                        </span>
                    </h3>
                    <ul class="MenuCaNhan">
                        <li class="myClass SetColor" onclick="Load('ThongTin')" id="ThongTin"><span><i class="fas fa-user"></i>Thông tin tài khoản</span><hr /></li>
                        <li class="myClass" onclick="Load('HoaDon')" id="HoaDon"><span><i class="fas fa-money-check-alt"></i>Đơn hàng của tôi</span><hr /></li>
                        <li class="myClass" onclick="Load('DoiMK')" id="ThayDoiMK"><span><i class="fa fa-key"></i>Thay đổi mật khẩu</span><hr /></li>
                        <li class="myClass" onclick="window.location.href='@Url.Action("Logout","User",new { current=Request.Url.AbsoluteUri})'"><span><i class="fas fa-sign-out-alt"></i>Thoát</span><hr /></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9" id="NoiDung">
                <script type="text/javascript">
                    $(".link-site-more").hover(function () { $(this).find(".s-c-n").show(); }, function () { $(this).find(".s-c-n").hide(); });
                </script>


            </div>
            <script type="text/javascript">
                        $.post('@Url.Action("ThongTinTaiKhoan_Partial", "User")', {}, function (data) {
                            $("#NoiDung").html(data);
                        });
                        function Load(Loai) {
                            if (Loai == "ThongTin") {
                                $("#ThongTin").addClass("SetColor");
                                $("#HoaDon").removeClass("SetColor");
                                $("#ThayDoiMK").removeClass("SetColor");
                                $.post('@Url.Action("ThongTinTaiKhoan_Partial", "User")', {}, function (data) {
                                    $("#NoiDung").html(data);
                                });

                            }
                            else if (Loai == "HoaDon") {
                                $("#ThongTin").removeClass("SetColor");
                                $("#HoaDon").addClass("SetColor");
                                $("#ThayDoiMK").removeClass("SetColor");
                                $.post('@Url.Action("DonHangCuaToi_Partial", "User")', {}, function (data) {
                                    $("#NoiDung").html(data);
                                });

                            } else if (Loai == "DoiMK") {
                                $("#ThongTin").removeClass("SetColor");
                                $("#HoaDon").removeClass("SetColor");
                                $("#ThayDoiMK").addClass("SetColor");
                                $.post('@Url.Action("DoiMatKhau_Partial", "User")', {}, function (data) {
                                    $("#NoiDung").html(data);
                                });

                            } else if (Loai == "DangXuat") {
                                Logout();
                            }
                        }
            </script>
        </div>
    </div>
</div>

@Html.Action("Footer_Partical", "Home")
