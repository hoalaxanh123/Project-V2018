@Html.Partial("~/Views/Home/Head.cshtml")
@Html.Action("Header_Partical", "Home")
@Html.Action("SlideShow_Partical", "Home")

<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <section class="product-content clearfix">
                    <h1 class="title clearfix"><span>Danh mục sản phẩm</span></h1>
                    <nav class="navbar navbar-default product-filter">
                        <ul class="display">
                            <li id="grid" class="grid"><a href="#" title="Grid"><i class="fa fa-th-large"></i></a></li>
                            <li id="list" class="list"><a href="#" title="List"><i class="fa fa-th-list"></i></a></li>
                        </ul>
                        <div class="sort">
                            <span>Sản phẩm/trang</span>
                            <select id="lblimit" name="lblimit" class="nb_item">
                                @* old class : lblimit *@
                                <option value="6">6</option>
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="20">20</option>
                                <option value="24" selected>24</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                                <option value="250">250</option>
                                <option value="500">500</option>
                            </select>
                        </div>
                        @*<div class="sort">
                                <span>Sắp xếp</span>
                                <select class="selectProductSort" id="lbsort" onchange="window.location.href = this.options[this.selectedIndex].value">
                                    <option value="?sort=index&amp;order=asc">Mặc định</option>
                                    <option value="?sort=price&amp;order=asc">Gi&#225; tăng dần</option>
                                    <option value="?sort=price&amp;order=desc">Gi&#225; giảm dần</option>
                                    <option value="?sort=name&amp;order=asc">T&#234;n sản phẩm: A to Z</option>
                                    <option value="?sort=name&amp;order=desc">T&#234;n sản phẩm: Z to A</option>
                                </select>
                            </div>*@
                    </nav>
                    <div class="product-block product-grid clearfix" id="DSSP">

                    </div>
                    <script type="text/javascript">
                        $(document).ready(function () {
                            var Limit = $("#lblimit").val();
                            LoadDS(1, Limit);
                        });
                        $("#lblimit").change(function () {
                            var Limit = $("#lblimit").val();
                            $("#TrangHienTai").text("1");
                            LoadDS(1, Limit);
                        });

                        function LoadDS(trang, gioiHan) {
                            $.post('@Url.Action("Products_All", "Products")', { Page: trang, Limit: gioiHan , MaLoai:@ViewBag.MaLoai }, function (data) {
                                $("#DSSP").html(data);
                                $(window).lazyLoadXT();
                            });
                             $.post('@Url.Action("ThanhPhanTrang_Partial", "Products")', { Limit: gioiHan }, function (data) {
                                    $("#ThanhPhanTrang").html(data);
                            });
                        }

                    </script>
                    <div class="navigation">
                        <br />
                        <ul class="pagination"></ul>
                        <div id="ThanhPhanTrang"></div>
                        <h6 id="TrangHienTaiContainer">Trang hiện tại : <i id="TrangHienTai" style="font-style:normal">1</i></h6>
                        <style>
                            #ThanhPhanTrang:hover {
                                cursor: pointer;
                            }
                        </style>
                    </div>

                </section>

            </div>
        </div>
    </div>
</div>
@Html.Action("Footer_Partical", "Home")