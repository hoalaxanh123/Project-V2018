@using Project_V_2018.Models
@model NguoiDung
<div class="comunication-content clearfix ng-scope">
    <h1 class="title"><span>Thông tin tài khoản</span></h1>
    <!-- ngIf: IsError -->
    <!-- ngIf: IsSuccess -->
    <!-- ngIf: InValid -->
    <div class="col-md-8 col-md-offset-2 col-xs-12 col-sm-12 col-xs-offset-0 col-sm-offset-0">

        <div class="form-horizontal ng-pristine ng-valid ng-valid-required">



            <h2>Thông tin tài khoản</h2>
            <div class="form-group">
                <label for="Email" class="col-sm-3 control-label">Tên đăng nhập : </label>
                <div class="col-sm-9">
                    <label class="control-label ng-binding">@Model.TenDangNhap.Trim()</label>
                </div>
            </div>
            <div class="form-group">
                <label for="Email" class="col-sm-3 control-label">Mật khẩu</label>
                <div class="col-sm-9">
                    <label class="control-label">******</label>
                </div>
            </div>
            <h2>Thông tin cá nhân</h2>
            <div class="form-group">
                <label for="Name" class="col-sm-3 control-label">Họ tên</label>
                <div class="col-sm-9">
                    <input id="TTTK_TenThat" value="@Model.TenThat.Trim()" type="text" class="form-control ng-pristine ng-untouched ng-valid ng-valid-required" required>
                    <span id="error_TTTK_TenThat" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Giới tính</label>
                <div class="col-sm-9">
                    <select id="TTTK_GioiTinh" class="form-control ng-pristine ng-untouched ng-valid">
                        @{
                            if (Model.GioiTinh)
                            {
                                <option value="0" label="Nữ">Nữ</option>
                                <option value="1" label="Nam" selected>Nam</option>
                            }
                            else
                            {
                                <option value="0" label="Nữ" selected>Nữ</option>
                                <option value="1" label="Nam">Nam</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Email</label>
                <div class="col-sm-9">
                    <input id="TTTK_Email" type="email" value="@Model.Email" class="form-control ng-pristine ng-untouched ng-valid ng-valid-required" required>
                    <span id="error_TTTK_Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-inline">
                <label for="" class="col-sm-3 control-label">Ngày sinh</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", @id = "TTTK_NgaySinh" })
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-3 control-label">Điện thoại</label>
                <div class="col-sm-9">
                    <input id="TTTK_SDT" type="text" value="@Model.SoDienThoai.Trim()" class="form-control ng-pristine ng-untouched ng-valid">
                    <span id="error_TTTK_SDT" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-3 control-label">Địa chỉ</label>
                <div class="col-sm-9">
                    <input id="TTTK_DiaChi" type="text" value="@Model.DiaChi" class="form-control ng-pristine ng-untouched ng-valid">
                    <span id="error_TTTK_DiaChi" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="button" id="TTTK_btn_submit" class="btn btn-default ">Cập nhật</button>
                </div>
                <div class="col-sm-offset-1 col-sm-8">
                    <h5 class="text-danger text-center" id="TTTK_TB"></h5>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label"></label>
                <div class="col-sm-9">
                    <h5 class="control-label text-danger" id="TTTK_TB"></h5>
                </div>
            </div>
            <script src="~/Content/JS/ChangeUserInfo.js"></script>
        </div>
    </div>
</div>

