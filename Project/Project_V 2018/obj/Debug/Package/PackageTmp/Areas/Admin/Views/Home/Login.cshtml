<!DOCTYPE html>
@using Project_V_2018.Models
@model NguoiDung
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập tài khoản quản trị viên</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="~/Content/Admin/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-form">
        @using (Html.BeginForm("Login","Home",FormMethod.Post,new { @id= "AD_LoginForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @id= "AD_LoginForm"})


            <h2 class="text-center">Sign in</h2>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control", @placeholder = "Tên đăng nhập", @autofocus = "autofocus", @required = "required", @id = "AD_Login_User" })
                </div>
                <span id="error_AD_Login_User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", @type = "password", @placeholder = "Mật khẩu", @autofocus = "autofocus", @required = "required", @id = "AD_Login_Pass" })
                </div>
                <span id="error_AD_Login_Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-danger" id="AD_Login_KQ">@ViewBag.KetQua</label>
                <button type="submit" class="btn btn-primary login-btn btn-block" id="AD_Login_btnLogin">Đăng nhập</button>
            </div>
            <div class="clearfix">
                <label class="pull-left checkbox-inline"><input type="checkbox" checked id="AD_Login_RememberMe" name="SaveMe"> Nhớ tài khoản</label>
                <a href="#" class="pull-right">Quên mật khẩu ?</a>
            </div>
            <div class="or-seperator"><i>Hoặc</i></div>
            <div class="text-center social-btn">
                <a href="~/Home" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i>&nbsp; Đưa tôi rời khỏi đây</a>
            </div>
        }
            <script src="~/Content/JS/ValidateLogin_ADMIN.js"></script>
        <p class="text-center text-muted small">Không có tài khoản ? <a href="~/dang-ky">Đăng ký ngay!</a></p>
    </div>
</body>
</html>
